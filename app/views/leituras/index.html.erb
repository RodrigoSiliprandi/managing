<p id="notice"><%= notice %></p>

<h1>Leituras</h1>

<table>
  <thead>
    <tr>
      <th>Livro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leituras.each do |leitura| %>
      <tr>
        <td><%= leitura.livro %></td>
        <td><%= link_to 'Show', leitura %></td>
        <td><%= link_to 'Edit', edit_leitura_path(leitura) %></td>
        <td><%= link_to 'Destroy', leitura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

